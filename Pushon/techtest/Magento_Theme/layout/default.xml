<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="top.links" remove="true" />
        <referenceContainer name="page.top" htmlTag="header" htmlClass="page-header-full-width" />
        <referenceContainer name="header.container" htmlTag="div" htmlClass="page-header-full-width" />
        <referenceContainer name="main.content" htmlTag="main" htmlClass="main-content-full-width" />
        <referenceContainer name="footer-container" htmlTag="footer" htmlClass="footer-full-width" />
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/logo.png</argument>
                <argument name="logo_width" xsi:type="number">300</argument>
                <argument name="logo_height" xsi:type="number">70</argument>
                <argument name="logo_alt" xsi:type="string">appliance shop</argument>
            </arguments>
        </referenceBlock>
    </body>
</page>